<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FDFBF7"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B31312"
        android:fontFamily="@font/poppins_bold"
        android:gravity="left"
        android:padding="15dp"
        android:shadowRadius="2"
        android:text="Cashier App"
        android:textColor="@color/white"
        android:textSize="21dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:paddingTop="26dp"
        android:paddingBottom="18dp"
        android:text="Selamat datang, Di Cashier App!"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Nama Pembeli"
        android:textSize="13dp" />

    <EditText
        android:id="@+id/etNama"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="13.5dp"
        android:layout_marginRight="13.5dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppins"
        android:hint="Masukkan Nama"
        android:inputType="text"
        android:padding="5dp"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="13.5dp"
        android:layout_marginRight="13.5dp"
        android:weightSum="4">

        <EditText
            android:id="@+id/etCariMenu"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3.1"
            android:layout_marginEnd="8dp"
            android:hint="Cari Menu"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btnCariMenu"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.9"
            android:backgroundTint="@color/maroon"
            android:fontFamily="@font/poppins_extrabold"
            android:gravity="center"
            android:text="CARI"
            android:textSize="14sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="4">

        <FrameLayout
            android:id="@+id/btnMenu1_container"
            android:layout_width="93dp"
            android:layout_height="90dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="0">

            <ImageView
                android:id="@+id/btnMenu1_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="7dp"
                android:layout_gravity="center"
                android:src="@drawable/burger" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnMenu2_container"
            android:layout_width="93dp"
            android:layout_height="90dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="0">

            <ImageView
                android:id="@+id/btnMenu2_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="7dp"
                android:layout_gravity="center"
                android:src="@drawable/lemoncola" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnMenu3_container"
            android:layout_width="93dp"
            android:layout_height="90dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="0">

            <ImageView
                android:id="@+id/btnMenu3_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="7dp"
                android:layout_gravity="center"
                android:src="@drawable/kentucky" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/btnMenu4_container"
            android:layout_width="93dp"
            android:layout_height="90dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="0">

            <ImageView
                android:id="@+id/btnMenu4_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="7dp"
                android:layout_gravity="center"
                android:src="@drawable/potatofries" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMenu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beef Burger"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:textStyle="bold"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tvMenu1Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/niramit_medium"
                android:text="Rp 20,000"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/etMenu1Jumlah"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/niramit_medium"
                android:hint="Jumlah"
                android:textSize="16dp"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMenu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lemon Cola"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:textStyle="bold"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tvMenu2Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 12,000"
                android:fontFamily="@font/niramit_medium"
                android:textSize="10dp"
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/etMenu2Jumlah"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="Jumlah"
                android:textSize="16dp"
                android:fontFamily="@font/niramit_medium"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMenu3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kentucky"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:textStyle="bold"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tvMenu3Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 26,000"
                android:fontFamily="@font/niramit_medium"
                android:textSize="10dp"
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/etMenu3Jumlah"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="Jumlah"
                android:textSize="16dp"
                android:fontFamily="@font/niramit_medium"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMenu4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="French Fries"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:textStyle="bold"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tvMenu4Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 18,000"
                android:fontFamily="@font/niramit_medium"
                android:textSize="10dp"
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/etMenu4Jumlah"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="Jumlah"
                android:textSize="16dp"
                android:fontFamily="@font/niramit_medium"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="Membership Pembeli :"
        android:textStyle="bold"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbGold"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:background="@drawable/rb_gold"
                android:fontFamily="@font/chakra_petch_medium"
                android:text="Gold"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rbSilver"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:background="@drawable/rb_silver"
                android:fontFamily="@font/chakra_petch_medium"
                android:text="Silver"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rbBronze"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:background="@drawable/rb_bronze"
                android:fontFamily="@font/chakra_petch_medium"
                android:text="Bronze"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/rbNone"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/chakra_petch_medium"
                android:text="None"
                android:background="@drawable/rb_none"
                android:textSize="16sp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="left"/>
        </RadioGroup>
    </LinearLayout>

    <!-- Total Price -->
    <TextView
        android:id="@+id/tvTotalHarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Harga :"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnBeli"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/maroon"
        android:text="Beli"
        android:fontFamily="@font/poppins_extrabold"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Reset"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:onClick="resetData"
        android:backgroundTint="@color/kuning" />


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B31312"
        android:fontFamily="@font/poppins_bold"
        android:gravity="left"
        android:padding="15dp"
        android:shadowRadius="2"
        android:text="Cashier App"
        android:textColor="@color/white"
        android:textSize="21dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:paddingTop="26dp"
        android:paddingBottom="18dp"
        android:text="Selamat datang, Silahkan Pilih Menu"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <FrameLayout
            android:id="@+id/btnMenu1_container"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="0"
            android:background="@drawable/border_background">

            <Button
                android:id="@+id/btnMenu1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="7dp"
                android:background="@null" />

            <ImageView
                android:id="@+id/btnMenu1_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="7dp"
                android:gravity="clip_horizontal|center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/burger" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnMenu2_container"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="0"
            android:background="@drawable/border_background2">

            <Button
                android:id="@+id/MenuHp2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="7dp"
                android:background="@null" />

            <ImageView
                android:id="@+id/btnMenu2_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="7dp"
                android:gravity="clip_horizontal|center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/lemoncola" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnMenu3_container"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="0"
            android:background="@drawable/border_background">
            <Button
                android:id="@+id/btnMenu3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="7dp"
                android:background="@null" />

            <ImageView
                android:id="@+id/btnMenu3_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="7dp"
                android:gravity="clip_horizontal|center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/kentucky" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/btnMenu4_container"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="0"
            android:background="@drawable/border_background2">

            <Button
                android:id="@+id/btnMenu4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="7dp"
                android:background="@null" />

            <ImageView
                android:id="@+id/btnMenu4_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="7dp"
                android:gravity="clip_horizontal|center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/potatofries" />
        </FrameLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <!-- Menu 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMenu1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cheese Burger"
                    android:textStyle="bold"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/etMenu1Quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/niramit_medium"
                    android:hint="Jumlah"
                    android:inputType="number"
                    android:maxLength="2"
                    android:maxLines="1" />
            </LinearLayout>

            <!-- Menu 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMenu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lemon Cola"
                    android:textStyle="bold"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/etMenu2Quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jumlah"
                    android:fontFamily="@font/niramit_medium"
                    android:inputType="number"
                    android:maxLength="2"
                    android:maxLines="1" />
            </LinearLayout>

            <!-- Menu 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMenu3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kentucky"
                    android:textStyle="bold"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/etMenu3Quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jumlah"
                    android:fontFamily="@font/niramit_medium"
                    android:inputType="number"
                    android:maxLength="2"
                    android:maxLines="1" />
            </LinearLayout>

            <!-- Menu 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMenu4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Potato Fries"
                    android:textStyle="bold"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/etMenu4Quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jumlah"
                    android:fontFamily="@font/niramit_medium"
                    android:inputType="number"
                    android:maxLength="2"
                    android:maxLines="1" />
            </LinearLayout>
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="Membership Pembeli:"
        android:textStyle="bold"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonGold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gold"
                android:checked="true"
                android:fontFamily="@font/chakra_petch_semibold"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/radioButtonSilver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Silver"
                android:fontFamily="@font/chakra_petch_semibold"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/radioButtonPlatinum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Platinum"
                android:fontFamily="@font/chakra_petch_semibold"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/radioButtonNone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/chakra_petch_semibold"
                android:text="None" />
        </RadioGroup>
    </LinearLayout>

    <!-- Total Price -->
    <TextView
        android:id="@+id/tvTotalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Harga: "
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"/>

    <!-- Beli Button -->
    <Button
        android:id="@+id/btnBeli"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Beli"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:onClick="resetData" />

</LinearLayout>


